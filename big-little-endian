#include<stdio.h>
int main(int argc,char *argv[])
{
    union
    {
        short s;//2bits
        char c[sizeof(short)];//2bits
    } un;

    un.s=0x0102;
    if(sizeof(short)==2)
    {
        if(un.c[0]==1&&un.c[1]==2)
            printf("big-endian\n");
        else if(un.c[0]==2&&un.c[1]==1)
            printf("little-endian\n");
        else
            printf("unknow\n");
    }
    else
    {
        printf("sizeof(short)=%d\n",sizeof(short));
    }
    return 0;
}
